<% @page_title = "Test v1.0" %>

<div class="container-fluid homeindex">
<header class="row header">
	<div class="col-lg-5 col-sm-5  clearfix ">
		<%= image_tag("logo1.png", :class => 'logo img-responsive') %>
	</div>

	<div class="col-lg-3 col-sm-4 search-nav-1">
		 <div class="form-control search-nav-2">
		 	
			<%= image_tag("search.png", :class => 'search-icon',:size => '20x20') %>
			

         </div>
    </div>
	<div class="col-lg-4 col-sm-3 headerdiv">
		<table summury="login" class="headertable">
			<tr>
				<td>
					<a href="#myModal" data-toggle="modal" data-target="#myModal" id="login">Login </a>
				</td>
				<td>&nbsp</td>
				<td>
					
					<%= link_to("Register", {:controller =>'products' ,:action => ' new'}, :class => "register") %> &nbsp 
				</td>
				<td >
					<span class="btn btn-warning btn-block" >
					<%= link_to("Post Ad", {:controller =>'products' ,:action => 'new'}, :class => "post") %></span>
				</td>

			</tr>
		</table>
	</div>
</header>



<!-- Modal for login -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="loginModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="loginModal">Login</h4>
      </div>
      <div class="modal-body">
			
			  <%= form_tag(:controller => 'acess' , :action => 'attempt_login') do %>
			  <table class="">
			    <tr>
		    <div class="form-group">
			    <%= label_tag(:username) %>
			      <%= text_field_tag(:username) %>
			   
			</div>
			<div class="form-group">
			    
			      <%= label_tag(:password) %>
			      <%= password_field_tag(:password) %>
			    
			</div>
			    <tr>
			      <td>&nbsp;</td>
			      <td></td>
			    </tr>
			  </table>
			 	<div class="modal-footer">
			        <button type="button" class="btn btn-default" data-dismiss="modal">close</button>
			        <%= submit_tag 'Login', class: 'btn btn-success' %>
			        
			     </div>
			 <% end %>

      </div>
      

    </div>
  </div>
</div>

<!-- Modal Login finish -->


<div class="row adjust">
</div>

<div class="col-lg-2 col-sm-3 filter hidden-xs">
	<%= render(:partial => "filter") %>
</div>

<div class="col-lg-6 col-sm-5 adcontent">
	<div class="row">
	<%= pluralize(@productcount,'product') %>  found 
	</div>
<%= will_paginate @products %>
	 <% @products.each do |f| %>
	 <!-- Start AdContent -->
		<%= render(:partial => "adContent", :locals => {:f => f}) %>
	<!-- end AdContent -->
	<% end %>
<%= will_paginate @products %>
</div>
